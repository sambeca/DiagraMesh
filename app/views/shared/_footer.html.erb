<div class="footer">
    <div class="footer__inner">
        <div class="footer-buttons__container">
            <button aria-label="new batch" data-microtip-position="top-left" role="tooltip">
                <%= link_to ('<i class="fas fa-sync footer-button"></i>').html_safe, "" %>
            </button>
            <button id="openCanvasImg" aria-label="open selection" data-microtip-position="top-left" role="tooltip">
                <i class="fas fa-link footer-button"></i>
            </button>
            <button id="openPagesFromSelected" aria-label="open pages from selected" data-microtip-position="top-left" role="tooltip">
                <i class="far fa-file-alt footer-button"></i>
            </button>
            <button aria-label="save to collection" data-microtip-position="top-left" role="tooltip" id="saveToCollection">
                <i class="far fa-save footer-button"></i>
            </button>
        </div>
    </div>
</div>
